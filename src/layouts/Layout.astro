---
import '@/styles/globals.css';
import '@/styles/brand-dark.css';
import Footer from '@/components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "TecnoJuy - Plataforma educativa moderna" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link 
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" 
      rel="stylesheet" 
    />
    
    <!-- Meta tags para SEO -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <title>{title}</title>

    <script>
      // SCRIPT DE LIMPIEZA AGRESIVA PARA MIXED CONTENT
      // Este script realiza una limpieza completa del navegador
      
      const FORCE_CLEANUP = true; // Activar limpieza forzada
      const CLEANUP_VERSION = '2024-09-24-v3'; // Incrementar para forzar nueva limpieza
      
      if (FORCE_CLEANUP && typeof window !== 'undefined') {
        console.log('ðŸ§¹ INICIANDO LIMPIEZA AGRESIVA DEL NAVEGADOR...');
        
        // 1. Verificar si ya se hizo la limpieza
        const lastCleanup = localStorage.getItem('sw_cleanup_version');
        if (lastCleanup !== CLEANUP_VERSION) {
          console.log('ðŸ”¥ VersiÃ³n de limpieza nueva detectada. Ejecutando limpieza completa...');
          
          // 2. Limpiar Service Workers
          if ('serviceWorker' in navigator) {
            navigator.serviceWorker.getRegistrations().then(registrations => {
              if (registrations.length > 0) {
                console.log(`ðŸ§¹ Eliminando ${registrations.length} Service Workers...`);
                registrations.forEach(reg => {
                  reg.unregister().then(() => {
                    console.log(`âœ… SW eliminado: ${reg.scope}`);
                  });
                });
              }
            });
          }
          
          // 3. Limpiar todos los caches de la API Cache
          if ('caches' in window) {
            caches.keys().then(cacheNames => {
              console.log(`ðŸ§¹ Eliminando ${cacheNames.length} caches...`);
              cacheNames.forEach(cacheName => {
                caches.delete(cacheName).then(() => {
                  console.log(`âœ… Cache eliminado: ${cacheName}`);
                });
              });
            });
          }
          
          // 4. Limpiar localStorage y sessionStorage
          try {
            console.log('ðŸ§¹ Limpiando storage local...');
            localStorage.clear();
            sessionStorage.clear();
            
            // 5. Marcar que se hizo la limpieza
            localStorage.setItem('sw_cleanup_version', CLEANUP_VERSION);
            
            // 6. Forzar recarga completa despuÃ©s de un breve delay
            setTimeout(() => {
              console.log('ðŸ”„ FORZANDO RECARGA COMPLETA...');
              window.location.reload(true); // Hard reload
            }, 1000);
            
          } catch (e) {
            console.error('âŒ Error durante la limpieza:', e);
          }
        } else {
          console.log('âœ… Limpieza ya realizada para esta versiÃ³n.');
        }
      }
      
      // INTERCEPTOR DE FETCH PARA FORZAR HTTPS
      // Este cÃ³digo "hackea" la funciÃ³n fetch del navegador para forzar HTTPS
      if (typeof window !== 'undefined' && window.fetch) {
        const originalFetch = window.fetch;
        window.fetch = function(...args) {
          let [resource, config] = args;
          
          // Si el primer argumento es una string URL, verificar y corregir
          if (typeof resource === 'string') {
            if (resource.startsWith('http://backend-tecnojuy2-production.up.railway.app')) {
              const correctedUrl = resource.replace('http://', 'https://');
              console.log(`ðŸ”’ FETCH INTERCEPTADO Y CORREGIDO: ${resource} -> ${correctedUrl}`);
              resource = correctedUrl;
            }
          }
          
          // Llamar al fetch original con la URL corregida
          return originalFetch.call(this, resource, config);
        };
        console.log('ðŸ”’ Interceptor de FETCH instalado para forzar HTTPS');
      }
    </script>
  </head>
  <body class="antialiased transition-colors" style="background-color: var(--bg-secondary);">
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>


