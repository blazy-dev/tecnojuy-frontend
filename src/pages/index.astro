---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar.astro';
import DynamicHomepage from '@/components/DynamicHomepage.tsx';
import FeaturedCourses from '@/components/FeaturedCourses.tsx';
import StatsCounter from '@/components/StatsCounter.tsx';
---

<Layout 
  title="TecnoJuy - Plataforma Educativa" 
  description="Aprende tecnología con los mejores cursos y recursos educativos. Únete a nuestra comunidad de estudiantes y profesionales."
>
  <style>
    /* Importar estilos de colores y animaciones */
    @import url('../styles/colors.css');
    @import url('../styles/animations.css');
  </style>
  
  <!-- Navbar -->
  <Navbar />
  
  <!-- Hero Section con Banner Deslizable -->
  <DynamicHomepage client:load />
  
  <!-- Featured Courses Section -->
  <FeaturedCourses client:load />

  <!-- Stats Counter Section -->
  <StatsCounter client:load />
  
  <!-- Features Section -->
  <section class="py-20" style="background-color: var(--bg-secondary);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: var(--text-primary);">
          ¿Por qué elegir TecnoJuy?
        </h2>
        <p class="text-xl max-w-2xl mx-auto" style="color: var(--text-secondary);">
          Ofrecemos una experiencia de aprendizaje única, diseñada para el mundo moderno.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div 
          class="rounded-xl p-8 card-hover animate-fade-in-up shadow-lg hover:shadow-2xl transition-all duration-300"
          style="background-color: var(--bg-primary); border: 1px solid var(--border-primary);"
        >
          <div 
            class="w-16 h-16 rounded-xl flex items-center justify-center mx-auto mb-6"
            style="background: var(--gradient-primary);"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-center" style="color: var(--text-primary);">Aprendizaje Rápido</h3>
          <p class="text-center leading-relaxed" style="color: var(--text-secondary);">
            Metodología optimizada para que puedas dominar nuevas tecnologías en tiempo récord.
          </p>
        </div>
        
        <!-- Feature 2 -->
        <div 
          class="rounded-xl p-8 card-hover animate-fade-in-up delay-100 shadow-lg hover:shadow-2xl transition-all duration-300"
          style="background-color: var(--bg-primary); border: 1px solid var(--border-primary);"
        >
          <div 
            class="w-16 h-16 rounded-xl flex items-center justify-center mx-auto mb-6"
            style="background: var(--gradient-secondary);"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-center" style="color: var(--text-primary);">Proyectos Reales</h3>
          <p class="text-center leading-relaxed" style="color: var(--text-secondary);">
            Trabaja en proyectos del mundo real que podrás incluir en tu portafolio profesional.
          </p>
        </div>
        
        <!-- Feature 3 -->
        <div 
          class="rounded-xl p-8 card-hover animate-fade-in-up delay-200 shadow-lg hover:shadow-2xl transition-all duration-300"
          style="background-color: var(--bg-primary); border: 1px solid var(--border-primary);"
        >
          <div 
            class="w-16 h-16 rounded-xl flex items-center justify-center mx-auto mb-6"
            style="background: var(--gradient-primary);"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-center" style="color: var(--text-primary);">Contenido Actualizado</h3>
          <p class="text-center leading-relaxed" style="color: var(--text-secondary);">
            Cursos constantemente actualizados con las últimas tendencias y tecnologías.
          </p>
        </div>
        
        <!-- Feature 4 -->
        <div 
          class="rounded-xl p-8 card-hover animate-fade-in-up delay-300 shadow-lg hover:shadow-2xl transition-all duration-300"
          style="background-color: var(--bg-primary); border: 1px solid var(--border-primary);"
        >
          <div 
            class="w-16 h-16 rounded-xl flex items-center justify-center mx-auto mb-6"
            style="background: var(--gradient-secondary);"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-center" style="color: var(--text-primary);">Mentores Expertos</h3>
          <p class="text-center leading-relaxed" style="color: var(--text-secondary);">
            Aprende de profesionales con años de experiencia en la industria tecnológica.
          </p>
        </div>
        
        <!-- Feature 5 -->
        <div 
          class="rounded-xl p-8 card-hover animate-fade-in-up delay-400 shadow-lg hover:shadow-2xl transition-all duration-300"
          style="background-color: var(--bg-primary); border: 1px solid var(--border-primary);"
        >
          <div 
            class="w-16 h-16 rounded-xl flex items-center justify-center mx-auto mb-6"
            style="background: var(--gradient-secondary);"
          >
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-center" style="color: var(--text-primary);">Precios Accesibles</h3>
          <p class="text-center leading-relaxed" style="color: var(--text-secondary);">
            Educación de calidad al alcance de todos, con planes flexibles y becas disponibles.
          </p>
        </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20" style="background: var(--gradient-hero);">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <div class="animate-fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          ¿Listo para transformar tu carrera?
        </h2>
        <p class="text-xl text-white/90 mb-8">
          Únete a miles de estudiantes que ya están construyendo su futuro en tecnología.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a 
            href="/login" 
            class="btn-primary text-lg px-8 py-4 inline-flex items-center space-x-2"
          >
            <span>Comenzar Ahora</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a 
            href="/contacto" 
            class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-all hover:scale-105 hover:shadow-lg inline-flex items-center space-x-2"
          >
            <span>Contactar</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
  
</Layout>

